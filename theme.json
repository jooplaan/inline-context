{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Inline Context",
	"settings": {
		"custom": {
			"inlineContext": {
				"link": {
					"scrollMargin": "2rem",
					"hoverColor": "var(--wp--preset--color--primary, #0073aa)",
					"focusColor": "var(--wp--preset--color--primary, #0073aa)",
					"focusBorderColor": "var(--wp--preset--color--primary, #0073aa)",
					"openColor": "var(--wp--preset--color--primary, #0073aa)"
				},
				"note": {
					"marginY": "0.75em",
					"paddingY": "0.75em",
					"paddingX": "1em",
					"background": "rgba(0, 0, 0, 0.04)",
					"borderColor": "rgba(0, 0, 0, 0.08)",
					"accentWidth": "3px",
					"accentColor": "var(--wp--preset--color--primary, #0073aa)",
					"radius": "6px",
					"shadow": "0 1px 2px rgba(0, 0, 0, 0.05)",
					"fontSize": "0.95em",
					"linkColor": "inherit",
					"linkUnderline": "currentColor"
				},
				"chevron": {
					"defaultColor": "%23757575",
					"hoverColor": "%230073aa",
					"size": "0.75em",
					"marginLeft": "0.25em",
					"opacity": "0.7",
					"hoverOpacity": "1"
				}
			}
		}
	}
}
