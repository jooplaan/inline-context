{
	"name": "inline-context",
	"version": "2.3.8",
	"main": "src/index.js",
	"scripts": {
		"start": "wp-scripts start",
		"build": "wp-scripts build",
		"lint:js": "wp-scripts lint-js src/ --no-error-on-unmatched-pattern",
		"lint:js:fix": "wp-scripts lint-js src/ --fix --no-error-on-unmatched-pattern",
		"lint:php": "vendor/bin/phpcs --standard=WordPress inline-context.php admin-settings.php uninstall.php includes/",
		"lint:php:fix": "vendor/bin/phpcbf --standard=WordPress inline-context.php admin-settings.php uninstall.php includes/",
		"lint:md": "npx markdownlint-cli2 \"**/*.md\" \"!node_modules\" \"!vendor\"",
		"lint:md:fix": "npx markdownlint-cli2 --fix \"**/*.md\" \"!node_modules\" \"!vendor\"",
		"format:js": "prettier --write \"src/**/*.{js,jsx,scss,css,json}\"",
		"format": "npm run format:js && npm run lint:php:fix",
		"lint": "npm run lint:js && npm run lint:php && npm run lint:md",
		"lint:fix": "npm run lint:js:fix && npm run lint:php:fix && npm run lint:md:fix",
		"test:unit": "wp-scripts test-unit-js",
		"test:unit:watch": "wp-scripts test-unit-js --watch",
		"test:unit:coverage": "wp-scripts test-unit-js --coverage",
		"test": "npm run lint && npm run test:unit",
		"pot": "echo 'POT file generation requires WP-CLI. Run: wp i18n make-pot . languages/inline-context.pot --domain=inline-context'",
		"prepackage": "npm run lint:fix && npm run build",
		"package": "bash bin/package.sh",
		"prerelease": "npm run lint:fix && npm run build",
		"release": "bash bin/package.sh"
	},
	"dependencies": {
		"dompurify": "^3.0.0",
		"react-quill": "^2.0.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@wordpress/block-editor": "^15.8.0",
		"@wordpress/components": "^30.8.0",
		"@wordpress/data": "^10.35.0",
		"@wordpress/element": "^6.35.0",
		"@wordpress/i18n": "^6.8.0",
		"@wordpress/scripts": "^25.0.0"
	}
}
