{
	"name": "jooplaan/inline-context",
	"description": "Add inline expandable context notes with direct anchor linking. Features subtle design for optimal reading flow and smart link behavior.",
	"type": "wordpress-plugin",
	"version": "2.2.0",
	"keywords": [
		"wordpress",
		"plugin",
		"gutenberg",
		"block-editor",
		"inline",
		"context",
		"footnote",
		"tooltip",
		"anchor-links"
	],
	"homepage": "https://github.com/jooplaan/inline-context",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Joop Laan",
			"homepage": "https://www.jooplaan.com",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/jooplaan/inline-context/issues",
		"source": "https://github.com/jooplaan/inline-context"
	},
	"require": {
		"php": ">=7.4",
		"composer/installers": "^1.0 || ^2.0"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpcsstandards/phpcsutils": "^1.0",
		"phpunit/phpunit": "^9.0",
		"yoast/phpunit-polyfills": "^1.0"
	},
	"extra": {
		"installer-name": "inline-context",
		"installer-paths": {
			"wp-content/plugins/{$name}/": [
				"type:wordpress-plugin"
			]
		}
	},
	"scripts": {
		"lint": "vendor/bin/phpcs --standard=WordPress *.php",
		"lint:fix": "vendor/bin/phpcbf --standard=WordPress *.php",
		"test:setup": "bash bin/setup-tests.sh",
		"test:install": "bash bin/install-wp-tests.sh",
		"test:unit": "vendor/bin/phpunit",
		"test": "composer run lint && composer run test:unit"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
